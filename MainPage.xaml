<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorApp.MainPage">

    <StackLayout Padding="20">
        <Frame BackgroundColor="LightBlue"
               Padding="15" Margin="0,0,0,20">
            <Label Text="0"
                   FontSize="38"
                   FontAttributes="Bold"
                   HorizontalOptions="End"
                   x:Name="TheLabelResult">

            </Label>

        </Frame>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <!--1 no row-->

        <Button Grid.Row="0"
                Grid.Column = "0" 
                Text = "C"
                BackgroundColor="Red"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"
                x:Name="BtnClear"
                Clicked="BtnClear_Clicked"
                />

        <Button Grid.Row="0"
                Grid.Column = "1" 
                Text = "Del"
                BackgroundColor="Red"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"
                x:Name = "BtnX"
                Clicked = "BtnX_Clicked"/>

        <Button Grid.Row="0"
                Grid.Column = "2" 
                Text = "%"
                BackgroundColor="Orange"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"
                x:Name = "BtnPercen"
                Clicked="BtnPercen_Clicked"/>

        <Button Grid.Row="0"
                Grid.Column = "3" 
                Text = "/"
                BackgroundColor="Orange"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"
                Clicked="BtnOperations_Clicked"/>


            <!--2 no row-->

            <Button

                Grid.Row="1"
                Grid.Column = "0" 
                Text = "1"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"
                x:Name = "BtnOne"
                Clicked="BtnCommon_Clicked"/>

             <Button

                Grid.Row="1"
                Grid.Column = "1" 
                Text = "2"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"
                Clicked="BtnCommon_Clicked"/>

            <Button

                Grid.Row="1"
                Grid.Column = "2" 
                Text = "3"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"
                Clicked="BtnCommon_Clicked"/>


             <Button

                Grid.Row="1"
                Grid.Column = "3" 
                Text = "*"
                BackgroundColor="Orange"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"
                 Clicked="BtnOperations_Clicked"/>

             <!--3 no row-->


            <Button

                Grid.Row="2"
                Grid.Column = "0" 
                Text = "4"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"
                Clicked="BtnCommon_Clicked"/>


             <Button

                Grid.Row="2"
                Grid.Column = "1" 
                Text = "5"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"
                Clicked="BtnCommon_Clicked"/>


             <Button

                Grid.Row="2"
                Grid.Column = "2" 
                Text = "6"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"
                Clicked="BtnCommon_Clicked"/>


             <Button

                Grid.Row="2"
                Grid.Column = "3" 
                Text = "-"
                BackgroundColor="Orange"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"
                Clicked="BtnOperations_Clicked"/>



             <!--3 no row-->


            <Button

                Grid.Row="3"
                Grid.Column = "0" 
                Text = "7"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"
                Clicked="BtnCommon_Clicked"/>



            <Button

                Grid.Row="3"
                Grid.Column = "1" 
                Text = "8"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"
                Clicked="BtnCommon_Clicked"/>



            <Button

                Grid.Row="3"
                Grid.Column = "2" 
                Text = "9"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"
                Clicked="BtnCommon_Clicked"/>



               <Button

                Grid.Row="3"
                Grid.Column = "3" 
                Text = "+"
                BackgroundColor="Orange"
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"
                Clicked="BtnOperations_Clicked"/>




               <!--4 no row-->

               
            <Button

                Grid.Row="4"
                Grid.Column = "0" 
                Text = "0"
                FontSize="Large"
                BackgroundColor="DarkGray"
                FontAttributes="Bold"
                Padding="35"
                Clicked="BtnCommon_Clicked"/>



              
            <Button

                Grid.Row="4"
                Grid.Column = "1" 
                Text = "."
                FontSize="Large"
                FontAttributes="Bold"
                Padding="35"/>



            <Button

                Grid.Row="4"
                Grid.Column = "2" 
                Text = "="
                Grid.ColumnSpan ="2"
                FontSize="Large"
                BackgroundColor="LightGreen"
                FontAttributes="Bold"
                Padding="35"
                x:Name="BtnEqual"
                Clicked="BtnEqual_Clicked"
                />








                










              



                




            

















        </Grid>

       


    </StackLayout>

</ContentPage>
